<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autenticar"
        android:id="@+id/button"
        android:onClick="autenticar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Firmar"
        android:id="@+id/button2"
        android:onClick="seleccionarTipoFirma"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/url"
        android:text="http://testservices.viafirma.com/viafirma"
        android:inputType="textWebEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:text="xnoccio"
        android:id="@+id/appKey"
        android:layout_below="@+id/url"
        android:layout_alignEnd="@+id/url"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passKey"
        android:inputType="text"
        android:text ="12345"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appKey"
        android:layout_alignEnd="@+id/appKey"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
